<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Launch login"/>

    <LinearLayout
        android:id="@+id/user_instagram_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:visibility="gone">
        <ImageView android:id="@+id/user_photo" android:layout_width="160dp"
                   android:layout_height="160dp" android:layout_gravity="center_horizontal"/>
        <TextView android:id="@+id/user_text_info" android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>